                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EntryChip " />

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Entry"
                android:layout_width="wrap_content"
